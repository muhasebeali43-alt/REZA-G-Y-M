  <script>
    // Default configuration
    const defaultConfig = {
      main_title: 'Borsa Bilgi Portalƒ±',
      ipo_section_title: 'Yeni Halka Arzlar',
      balance_section_title: 'Bilan√ßo Takvimi',
      market_section_title: 'G√ºnl√ºk Piyasa',
      primary_color: '#10b981',
      secondary_color: '#1e293b',
      text_color: '#ffffff',
      accent_color: '#6366f1',
      background_color: '#0f172a'
    };

    let config = { ...defaultConfig };

    // Admin Panel Functions
    function toggleAdminPanel() {
      const panel = document.getElementById('admin-panel');
      if (panel.classList.contains('hidden')) {
        panel.classList.remove('hidden');
      } else {
        panel.classList.add('hidden');
      }
    }

    // Store API key globally - EMBEDDED FOR AUTO-UPDATE
    let twelveDataApiKey = 'eb32af5593614d118651096dc6e0478a';
    
    async function updateData() {
      const apiKey = document.getElementById('api-key').value;
      const button = document.getElementById('update-btn-text');
      const messageDiv = document.getElementById('update-message');
      
      if (!apiKey || apiKey.trim() === '') {
        messageDiv.className = 'bg-red-500/20 border border-red-500/50 rounded-xl p-4 mb-6';
        messageDiv.innerHTML = '<p class="text-red-300">‚ùå L√ºtfen Twelve Data API anahtarƒ±nƒ±zƒ± girin!</p>';
        messageDiv.classList.remove('hidden');
        return;
      }
      
      button.textContent = 'G√ºncelleniyor...';
      twelveDataApiKey = apiKey;
      
      try {
        // Test API with BIST 100 stocks
        const testSymbols = ['THYAO', 'ASELS', 'EREGL', 'TUPRS', 'GARAN'];
        const testUrl = `https://api.twelvedata.com/time_series?symbol=${testSymbols[0]}&interval=1day&outputsize=1&apikey=${apiKey}`;
        
        const response = await fetch(testUrl);
        const data = await response.json();
        
        if (data.status === 'error' || data.code === 401) {
          throw new Error('API anahtarƒ± ge√ßersiz veya hatalƒ±');
        }
        
        if (data.status === 'ok' || data.values) {
          // API key is valid, now fetch all data
          await fetchAllMarketData();
          
          messageDiv.className = 'bg-emerald-500/20 border border-emerald-500/50 rounded-xl p-4 mb-6';
          messageDiv.innerHTML = `
            <p class="text-emerald-300 font-bold">‚úÖ API Baƒülantƒ±sƒ± Ba≈üarƒ±lƒ±!</p>
            <p class="text-emerald-200 text-sm mt-2">T√ºm piyasa verileri g√ºncelleniyor... (Bu i≈ülem 10-20 saniye s√ºrebilir)</p>
          `;
          messageDiv.classList.remove('hidden');
          
          button.textContent = 'Veriler G√ºncellendi ‚úì';
          
          // Start auto-refresh every 5 minutes (300000ms)
          if (window.marketDataInterval) {
            clearInterval(window.marketDataInterval);
          }
          window.marketDataInterval = setInterval(fetchAllMarketData, 300000);
          
          // Show auto-refresh indicator
          showAutoRefreshIndicator();
          
        } else {
          throw new Error('API yanƒ±tƒ± beklenmeyen formatta');
        }
        
      } catch (error) {
        messageDiv.className = 'bg-red-500/20 border border-red-500/50 rounded-xl p-4 mb-6';
        messageDiv.innerHTML = `
          <p class="text-red-300 font-bold">‚ùå Hata: ${error.message}</p>
          <p class="text-red-200 text-sm mt-2">L√ºtfen API anahtarƒ±nƒ±zƒ± kontrol edin.</p>
          <p class="text-red-200 text-sm">Twelve Data limitiniz dolmu≈ü olabilir (800 istek/g√ºn)</p>
        `;
        messageDiv.classList.remove('hidden');
        
        button.textContent = 'Verileri G√ºncelle';
        twelveDataApiKey = null;
      }
    }
    
    // Fetch all market data from Twelve Data
    async function fetchAllMarketData() {
      if (!twelveDataApiKey) return;
      
      try {
        // Fetch BIST stocks (gainers and losers)
        await fetchBISTStocks();
        
        // Fetch BIST indices
        await fetchBISTIndices();
        
        // Fetch forex rates
        await fetchForexRates();
        
      } catch (error) {
        console.error('Piyasa verileri g√ºncellenirken hata:', error);
      }
    }
    
    async function fetchBISTStocks() {
      const gainersSymbols = ['EREGL', 'TUPRS', 'PETKM', 'SAHOL', 'BIMAS'];
      const losersSymbols = ['EKGYO', 'MGROS', 'TOASO', 'AKBNK', 'FROTO'];
      
      // Fetch gainers
      for (let i = 0; i < gainersSymbols.length; i++) {
        try {
          const url = `https://api.twelvedata.com/time_series?symbol=${gainersSymbols[i]}&interval=1day&outputsize=2&apikey=${twelveDataApiKey}`;
          const response = await fetch(url);
          const data = await response.json();
          
          if (data.values && data.values.length >= 2) {
            const currentPrice = parseFloat(data.values[0].close);
            const previousPrice = parseFloat(data.values[1].close);
            const change = ((currentPrice - previousPrice) / previousPrice * 100).toFixed(2);
            
            updateStockCard('gainers', i, gainersSymbols[i], currentPrice, change);
          }
          
          // Wait 100ms between requests to avoid rate limiting
          await new Promise(resolve => setTimeout(resolve, 100));
        } catch (error) {
          console.error(`${gainersSymbols[i]} verisi alƒ±namadƒ±:`, error);
        }
      }
      
      // Fetch losers
      for (let i = 0; i < losersSymbols.length; i++) {
        try {
          const url = `https://api.twelvedata.com/time_series?symbol=${losersSymbols[i]}&interval=1day&outputsize=2&apikey=${twelveDataApiKey}`;
          const response = await fetch(url);
          const data = await response.json();
          
          if (data.values && data.values.length >= 2) {
            const currentPrice = parseFloat(data.values[0].close);
            const previousPrice = parseFloat(data.values[1].close);
            const change = ((currentPrice - previousPrice) / previousPrice * 100).toFixed(2);
            
            updateStockCard('losers', i, losersSymbols[i], currentPrice, change);
          }
          
          await new Promise(resolve => setTimeout(resolve, 100));
        } catch (error) {
          console.error(`${losersSymbols[i]} verisi alƒ±namadƒ±:`, error);
        }
      }
    }
    
    async function fetchBISTIndices() {
      try {
        // BIST 100
        const bist100Url = `https://api.twelvedata.com/time_series?symbol=XU100.XIST&interval=1day&outputsize=2&apikey=${twelveDataApiKey}`;
        const response100 = await fetch(bist100Url);
        const data100 = await response100.json();
        
        if (data100.values && data100.values.length >= 2) {
          const currentPrice = parseFloat(data100.values[0].close);
          const previousPrice = parseFloat(data100.values[1].close);
          const change = ((currentPrice - previousPrice) / previousPrice * 100).toFixed(2);
          
          const bist100El = document.querySelector('footer .grid > div:nth-child(1) p:nth-child(2)');
          const bist100ChangeEl = document.querySelector('footer .grid > div:nth-child(1) p:nth-child(3)');
          
          if (bist100El) bist100El.textContent = currentPrice.toFixed(2);
          if (bist100ChangeEl) {
            bist100ChangeEl.textContent = `${change > 0 ? '+' : ''}${change}%`;
            bist100ChangeEl.className = change >= 0 ? 'text-emerald-400 text-sm' : 'text-red-400 text-sm';
          }
        }
        
        await new Promise(resolve => setTimeout(resolve, 100));
        
        // BIST 30
        const bist30Url = `https://api.twelvedata.com/time_series?symbol=XU030.XIST&interval=1day&outputsize=2&apikey=${twelveDataApiKey}`;
        const response30 = await fetch(bist30Url);
        const data30 = await response30.json();
        
        if (data30.values && data30.values.length >= 2) {
          const currentPrice = parseFloat(data30.values[0].close);
          const previousPrice = parseFloat(data30.values[1].close);
          const change = ((currentPrice - previousPrice) / previousPrice * 100).toFixed(2);
          
          const bist30El = document.querySelector('footer .grid > div:nth-child(2) p:nth-child(2)');
          const bist30ChangeEl = document.querySelector('footer .grid > div:nth-child(2) p:nth-child(3)');
          
          if (bist30El) bist30El.textContent = currentPrice.toFixed(2);
          if (bist30ChangeEl) {
            bist30ChangeEl.textContent = `${change > 0 ? '+' : ''}${change}%`;
            bist30ChangeEl.className = change >= 0 ? 'text-emerald-400 text-sm' : 'text-red-400 text-sm';
          }
        }
      } catch (error) {
        console.error('BIST endeksleri alƒ±namadƒ±:', error);
      }
    }
    
    async function fetchForexRates() {
      try {
        // USD/TRY
        const usdUrl = `https://api.twelvedata.com/time_series?symbol=USD/TRY&interval=1day&outputsize=2&apikey=${twelveDataApiKey}`;
        const responseUsd = await fetch(usdUrl);
        const dataUsd = await responseUsd.json();
        
        if (dataUsd.values && dataUsd.values.length >= 2) {
          const currentRate = parseFloat(dataUsd.values[0].close);
          const previousRate = parseFloat(dataUsd.values[1].close);
          const change = ((currentRate - previousRate) / previousRate * 100).toFixed(2);
          
          document.getElementById('usd-rate').textContent = currentRate.toFixed(2);
          const usdChangeEl = document.getElementById('usd-change');
          usdChangeEl.textContent = `${change > 0 ? '+' : ''}${change}%`;
          usdChangeEl.className = change >= 0 ? 'text-red-400 text-sm' : 'text-emerald-400 text-sm';
          
          previousRates.usd = currentRate;
        }
        
        await new Promise(resolve => setTimeout(resolve, 100));
        
        // EUR/TRY
        const eurUrl = `https://api.twelvedata.com/time_series?symbol=EUR/TRY&interval=1day&outputsize=2&apikey=${twelveDataApiKey}`;
        const responseEur = await fetch(eurUrl);
        const dataEur = await responseEur.json();
        
        if (dataEur.values && dataEur.values.length >= 2) {
          const currentRate = parseFloat(dataEur.values[0].close);
          const previousRate = parseFloat(dataEur.values[1].close);
          const change = ((currentRate - previousRate) / previousRate * 100).toFixed(2);
          
          document.getElementById('eur-rate').textContent = currentRate.toFixed(2);
          const eurChangeEl = document.getElementById('eur-change');
          eurChangeEl.textContent = `${change > 0 ? '+' : ''}${change}%`;
          eurChangeEl.className = change >= 0 ? 'text-red-400 text-sm' : 'text-emerald-400 text-sm';
          
          previousRates.eur = currentRate;
        }
      } catch (error) {
        console.error('D√∂viz kurlarƒ± alƒ±namadƒ±:', error);
      }
    }
    
    function updateStockCard(type, index, symbol, price, change) {
      const listId = type === 'gainers' ? 'gainers-list' : 'losers-list';
      const list = document.getElementById(listId);
      const card = list.children[index];
      
      if (card) {
        const symbolEl = card.querySelector('h3');
        const priceEl = card.querySelector('.text-right p:last-child');
        const changeEl = card.querySelector('.text-right span');
        
        if (priceEl) priceEl.textContent = `‚Ç∫${price.toFixed(2)}`;
        if (changeEl) {
          changeEl.textContent = `${change > 0 ? '+' : ''}${change}%`;
        }
      }
    }

    // Tab switching
    function showTab(tab) {
      const gainersTab = document.getElementById('tab-gainers');
      const losersTab = document.getElementById('tab-losers');
      const gainersList = document.getElementById('gainers-list');
      const losersList = document.getElementById('losers-list');
      
      if (tab === 'gainers') {
        gainersTab.className = 'flex-1 py-2 px-4 rounded-lg bg-emerald-500/20 text-emerald-400 font-medium text-sm transition-all';
        losersTab.className = 'flex-1 py-2 px-4 rounded-lg bg-slate-700/50 text-slate-400 font-medium text-sm transition-all';
        gainersList.classList.remove('hidden');
        losersList.classList.add('hidden');
      } else {
        losersTab.className = 'flex-1 py-2 px-4 rounded-lg bg-red-500/20 text-red-400 font-medium text-sm transition-all';
        gainersTab.className = 'flex-1 py-2 px-4 rounded-lg bg-slate-700/50 text-slate-400 font-medium text-sm transition-all';
        losersList.classList.remove('hidden');
        gainersList.classList.add('hidden');
      }
    }

    // Update time
    function updateTime() {
      const now = new Date();
      const timeString = now.toLocaleTimeString('tr-TR', { hour: '2-digit', minute: '2-digit' });
      document.getElementById('current-time').textContent = timeString;
    }
    
    updateTime();
    setInterval(updateTime, 60000);
    
    // Show auto-refresh indicator and countdown
    function showAutoRefreshIndicator() {
      const indicator = document.getElementById('auto-refresh-indicator');
      indicator.classList.remove('hidden');
      indicator.classList.add('flex');
      
      // Update countdown every second
      let secondsLeft = 300; // 5 minutes = 300 seconds
      
      function updateCountdown() {
        const minutes = Math.floor(secondsLeft / 60);
        const seconds = secondsLeft % 60;
        const nextRefreshEl = document.getElementById('next-refresh');
        if (nextRefreshEl) {
          nextRefreshEl.textContent = `(Sonraki g√ºncelleme: ${minutes}:${seconds.toString().padStart(2, '0')})`;
        }
        
        secondsLeft--;
        if (secondsLeft < 0) {
          secondsLeft = 300; // Reset countdown
        }
      }
      
      updateCountdown();
      if (window.countdownInterval) {
        clearInterval(window.countdownInterval);
      }
      window.countdownInterval = setInterval(updateCountdown, 1000);
    }

    // Store previous rates for comparison
    let previousRates = { usd: null, eur: null };
    
    // Auto-start data fetching on page load
    async function autoStartDataFetch() {
      if (twelveDataApiKey) {
        // Wait 2 seconds before starting
        setTimeout(async () => {
          await fetchAllMarketData();
          
          // Start auto-refresh every 5 minutes
          if (window.marketDataInterval) {
            clearInterval(window.marketDataInterval);
          }
          window.marketDataInterval = setInterval(fetchAllMarketData, 300000);
          
          // Show auto-refresh indicator
          showAutoRefreshIndicator();
        }, 2000);
      }
    }
    
    // Start auto-fetch on page load
    autoStartDataFetch();

    // Render function
    async function onConfigChange(cfg) {
      config = { ...defaultConfig, ...cfg };
      
      document.getElementById('main-title').textContent = config.main_title || defaultConfig.main_title;
      document.getElementById('ipo-section-title').textContent = config.ipo_section_title || defaultConfig.ipo_section_title;
      document.getElementById('balance-section-title').textContent = config.balance_section_title || defaultConfig.balance_section_title;
      document.getElementById('market-section-title').textContent = config.market_section_title || defaultConfig.market_section_title;
    }

    // Map to capabilities
    function mapToCapabilities(cfg) {
      return {
        recolorables: [
          {
            get: () => cfg.background_color || defaultConfig.background_color,
            set: (value) => { cfg.background_color = value; window.elementSdk.setConfig({ background_color: value }); }
          },
          {
            get: () => cfg.secondary_color || defaultConfig.secondary_color,
            set: (value) => { cfg.secondary_color = value; window.elementSdk.setConfig({ secondary_color: value }); }
          },
          {
            get: () => cfg.text_color || defaultConfig.text_color,
            set: (value) => { cfg.text_color = value; window.elementSdk.setConfig({ text_color: value }); }
          },
          {
            get: () => cfg.primary_color || defaultConfig.primary_color,
            set: (value) => { cfg.primary_color = value; window.elementSdk.setConfig({ primary_color: value }); }
          },
          {
            get: () => cfg.accent_color || defaultConfig.accent_color,
            set: (value) => { cfg.accent_color = value; window.elementSdk.setConfig({ accent_color: value }); }
          }
        ],
        borderables: [],
        fontEditable: undefined,
        fontSizeable: undefined
      };
    }

    // Map to edit panel values
    function mapToEditPanelValues(cfg) {
      return new Map([
        ['main_title', cfg.main_title || defaultConfig.main_title],
        ['ipo_section_title', cfg.ipo_section_title || defaultConfig.ipo_section_title],
        ['balance_section_title', cfg.balance_section_title || defaultConfig.balance_section_title],
        ['market_section_title', cfg.market_section_title || defaultConfig.market_section_title]
      ]);
    }

    // Initialize SDK
    if (window.elementSdk) {
      window.elementSdk.init({
        defaultConfig,
        onConfigChange,
        mapToCapabilities,
        mapToEditPanelValues
      });
    }
